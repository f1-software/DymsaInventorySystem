@page "/profit"


<div class="row">
    <div class="col-sm-3">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Date Range</span>
            </div>
            <div class="card-body">

            </div>
        </div>
    </div>
    <div class="col-sm-9">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Purchase Transactions</span>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-sm table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Item</th>
                            <th>Cost</th>
                            <th>Additional Fee</th>
                            <th>Comment</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (PurchaseTransactions.Any())
                        {
                            @foreach (var p in PurchaseTransactions)
                            {
                                <tr>
                                    <td>@p.TransactionDate.Value.ToShortDateString()</td>
                                    <td>
                                        @{
                                            var item = Items.FirstOrDefault(s=>s.ItemId == p.ItemId);
                                            <span>@item.ItemName - @item.ItemDescription</span>
                                        }
                                    </td>
                                    <td>@p.Cost</td>
                                    <td>@p.AdditionalFee</td>
                                    <td>@p.Comment</td>
                                    <td class="total_transaction_amount">
                                        @{
                                            var TotalTransactionAmount = p.Cost + p.AdditionalFee;
                                            <span>@TotalTransactionAmount</span>
                                        }
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td colspan="5"></td>
                                <td id="total_amount_purchase_transaction"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>